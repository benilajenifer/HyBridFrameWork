<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Open Cart Test Suite" verbose="4">

	<listeners>
		<listener
			class-name="com.qa.tutninja.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />

	</listeners>

	<test name="Open Cart Login Page Test ">
		

		<classes>
			<class name="com.qa.tutninja.tests.LoginPageTest" />
		</classes>
	</test>
	
	
	<test name="Open Cart Accounts Page Test ">
		

		<classes>
			<class name="com.qa.tutninja.tests.AccountsPageTest" />
		</classes>
	</test>
	
	
	
	<test name="Open Cart Registration Page Test ">
		
		<classes>
			<class name="com.qa.tutninja.tests.RegistrationPageTest" />
		</classes>
	</test>

</suite>